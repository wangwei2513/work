<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>视频欢迎页</title>
<script>
var videoUrl = "10.191.150.105/xhsysp.mpg"; // 视频地址
var needStopAV = true;

document.onkeydown = grabEvent;
function grabEvent(event){
	var keycode = event.which;
	switch(keycode){
		case 13:
			doSelect();
			return false;
			break;
		case 339:
		case 27:
			doExit();
			return false;
			break;
		case 340:
		case 8:
			doExit();
			return false;
			break;
	}	
	return true;
}

iSTB.evt.set_event_callback("eventCallback");
function eventCallback(type,event_name,event_type,event_value){
	switch(event_name){
		case  "PLAYER_BUFFERING_END"://5205
			break;
		case "PLAYER_FINISH"://5210
			iSTB.player.play(videoUrl);
			break;
	}
}


function init() {
	playVideo();
}

// 播放小视屏
function playVideo() {
	iSTB.player.play(videoUrl);
	iSTB.player.set_video_window(229, 113, 820, 461);
}

// 关闭小视屏
function closeSmallVideo() {
	iSTB.player.stop();
}

function doSelect() {
	closeSmallVideo();
	needStopAV = false;
	window.location.href = "index.htm";	
}

function exit() {
	if (needStopAV) {
		closeSmallVideo();
	}
}

</script>
</head>

<body onload="init()" onunload="exit()">
<div style="position:absolute;left:0px;top:0px; width:1280px; height:720px; background:url(image/bg2.png);">
    <div style="position: absolute; left: 229px; top: 113px; width: 821px; height: 461px;"></div>
    <div style="position: absolute; left: 430px; top: 603px; width: 100px; height: 47px;"><img src="image/btn01.jpg" width="421" height="46"></div>
</div>
</body>
</html>
